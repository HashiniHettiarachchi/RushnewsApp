<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E5E5E5">

    <!-- Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#FFFFFF"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_back_24"
            android:contentDescription="Back"
            android:layout_alignParentStart="true"
            android:padding="4dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sports News"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- News Image -->
    <ImageView
        android:id="@+id/news_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sport"
        android:contentDescription="News Image"
        android:layout_marginBottom="0dp" />

    <!-- News Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EEEEEE">

        <TextView
            android:id="@+id/news_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="16dp"
            android:text="Champions: University of Colombo\n\nThe University of Colombo clinched the 2024 Sri Lanka University Cricket Championship title, defeating Sabaragamuwa University by 3 wickets in the final held on November 10 at the University Grounds in Moratuwa."
            android:justificationMode="inter_word"/>

    </ScrollView>

</LinearLayout>
